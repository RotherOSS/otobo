<div class="RichTextHolder">
    <textarea class="RichText [% Data.FieldClass %]" id="[% Data.FieldName %]" name="[% Data.FieldName %]" title="[% Data.FieldLabelEscaped %]" data-maxlength="[% Data.MaxLength %]"[% IF Data.Readonly %] readonly[% END %]>[% Data.ValueEscaped %]</textarea>
</div>
<div id="[% Data.DivID %]" class="TooltipErrorMessage">
    <p>
        [% IF Data.Mandatory %][% Data.ErrorMessage1 %] [% END %][% Data.ErrorMessage2 %] [% Data.ErrorMessage3 %]
    </p>
</div>
[% IF Data.ServerError %]
<div id="[% Data.DivIDServerError %]" class="TooltipErrorMessage">
    <p>
        [% Translate(Data.ErrorMessage) | html %]
    </p>
</div>
[% END %]
