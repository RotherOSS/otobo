<input type="text" class="[% Data.FieldClass %]" id="[% Data.FieldID || Data.FieldName %]" name="[% Data.FieldName %]" title="[% Data.FieldLabelEscaped %]" value="[% Data.ValueEscaped %]" readonly/>
 <div id="[% Data.DivID %]" class="TooltipErrorMessage">
     <p>
         [% IF Data.Mandatory %][% Data.ErrorMessage1 %] [% END %][% Data.ErrorMessage2 %] [% Data.ErrorMessage3 %]
     </p>
 </div>
[% IF Data.ServerError %]
<div id="[% Data.DivIDServerError %]" class="TooltipErrorMessage">
    <p>
        [% Translate(Data.ErrorMessage) | html %]
    </p>
</div>
[% END %]
[% IF Data.Mandatory %]
    <div id="[% Data.DivIDMandatory %]" class="TooltipErrorMessage">
        <p>
            [% Translate(Data.FieldRequiredMessage) | html %]
        </p>
    </div>
[% END %]
