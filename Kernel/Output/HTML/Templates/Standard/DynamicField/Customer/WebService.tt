[% Data.SelectionHTML %]
[% IF Data.TreeView %]
    <a href="#" title="[% Translate(Data.TreeSelectionMessage) | html %]" class="ShowTreeSelection">
        <span>
            [% Translate(Data.TreeSelectionMessage) | html %]
        </span>
        <i class="fa fa-sitemap"></i>
    </a>
[% END %]
[% IF Data.Mandatory %]
    <div id="[% Data.DivIDMandatory %]" class="TooltipErrorMessage">
        <p>
            [% Translate(Data.FieldRequiredMessage) | html %]
        </p>
    </div>
[% END %]
[% IF Data.ServerError %]
    <div id="[% Data.DivIDServerError %]" class="TooltipErrorMessage">
        <p>
            [% Translate(Data.ErrorMessage) | html %]
        </p>
    </div>
[% END %]
